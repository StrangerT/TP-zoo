package com.ib.zoo.entity;

public class Personnel {
	
	protected String firstname;
	protected String lastname;
	protected double salary;
	protected double bonus; //to be redefined in each child class
	protected int dateOfRecruitment;
	protected int seniority;
		
	public Personnel(){
	}
	
	public Personnel(String fname, String lname, double salary, int dOR){
		this.firstname = fname;
		this.lastname = lname;
		this.salary = salary;
		this.dateOfRecruitment = dOR;
	}

	public String getFirstname() {
		return firstname;
	}

	public String getLastname() {
		return lastname;
	}

	public void setSalary(double salary) {
		this.salary = salary;
	}

	public void setSeniority(int seniority) {
		this.seniority = seniority;
	}

	public double getSalary() {
		return salary;
	}

	public int getSeniority() {
		this.seniority = this.dateOfRecruitment % 360;
		return this.seniority;
	}

	public double getBonus() {
		return bonus;
	}

	public void setBonus(double bonus) {
		this.bonus = bonus;
	}

	public static int getCount() {
		return count;
	}

	public static void setCount(int count) {
		Personnel.count = count;
	}

	public int getDateOfRecruitment() {
		return dateOfRecruitment;
	}
	
	

	
}
