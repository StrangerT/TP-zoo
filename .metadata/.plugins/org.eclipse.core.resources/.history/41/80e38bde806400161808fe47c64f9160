	public Person() {// surcharge d'un constructeur par default si vide
		sex = 'M';
		numberSecu = ++count;
	}
	
	public Person(String fname) {
		firstName = fname;
		numberSecu = ++count;
	}
	
	public Person(String fname, String lname){
		firstName = fname;
		lastName = lname;
		numberSecu = ++count;
	}
	
